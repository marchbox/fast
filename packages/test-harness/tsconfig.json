{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "declaration": true,
        "declarationDir": "dist/dts",
        "sourceMap": false,
        "outDir": "dist/esm",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitOnError": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
          "dom",
          "esnext"
        ]
    },
    "include": ["src/**/*.ts"]
}

